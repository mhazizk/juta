{
  "fontSize": "medium",
  "language": "english",
  "locale": "en-US",
  "theme": {
    "name": "Light Theme",
    "id": "light",
    "style": {
      "colors": {
        "background": "#F5F5F5",
        "foreground": "#151515",
        "primary": "#151515",
        "secondary": "#D5D5D5",
        "header": "#F5F5F5",
        "incomeAmount": "#008888",
        "incomeSymbol": "#00B19B",
        "success": "#0ECD9D",
        "warn": "#F49D1A",
        "danger": "#CD0E61",
        "failure": "#CD0E61"
      },
      "text": {
        "textPrimary": { "fontSize": 16, "color": "#252525" },
        "textSecondary": { "fontSize": 16, "color": "#B5B5B5" },
        "textDisabled": { "fontSize": 16, "color": "#B5B5B5" },
        "textSuccess": { "fontSize": 16, "color": "#0ECD9D" },
        "textWarn": { "fontSize": 16, "color": "#F49D1A" },
        "textDanger": { "fontSize": 16, "color": "#CD0E61" },
        "textFailure": { "fontSize": 16, "color": "#CD0E61" }
      },
      "button": {
        "buttonPrimary": {
          "buttonStyle": { "backgroundColor": "#151515", "borderRadius": 8 },
          "textStyle": { "color": "#F5F5F5", "fontSize": 16 }
        },
        "buttonSecondary": {
          "buttonStyle": {
            "backgroundColor": "transparent",
            "borderColor": "#151515",
            "borderRadius": 8,
            "borderWidth": 1
          },
          "textStyle": { "color": "#151515", "fontSize": 16 }
        },
        "buttonDisabled": { "backgroundColor": "#B5B5B5", "borderRadius": 8 },
        "buttonSuccess": { "backgroundColor": "#0ECD9D", "borderRadius": 8 },
        "buttonWarn": { "backgroundColor": "#F49D1A", "borderRadius": 8 },
        "buttonDanger": {
          "backgroundColor": "transparent",
          "borderColor": "#CD0E61",
          "borderRadius": 8,
          "borderWidth": 1
        },
        "buttonFailure": { "backgroundColor": "#CD0E61", "borderRadius": 8 }
      },
      "list": {
        "listContainer": {
          "display": "flex",
          "flexDirection": "row",
          "justifyContent": "flex-start",
          "alignItems": "center",
          "backgroundColor": "transparent",
          "paddingHorizontal": 16,
          "minHeight": 48
        },
        "listItem": {
          "borderColor": "#D5D5D5",
          "display": "flex",
          "flex": 1,
          "alignItems": "center",
          "flexDirection": "row",
          "justifyContent": "space-between",
          "paddingVertical": 0,
          "borderBottomWidth": 0.5,
          "minHeight": 46,
          "textAlignVertical": "center"
        }
      }
    }
  },
  "searchSettings": {
    "showTransactionsResult": true,
    "showSettingsResult": true
  },
  "logbookSettings": {
    "defaultCurrency": { "name": "IDR", "symbol": "Rp", "isoCode": "id" },
    "showSecondaryCurrency": true,
    "showTransactionNotes": true,
    "showTransactionTime": true,
    "dailySummary": "expense-only"
  },
  "currencyRate": [
    { "name": "USD", "rate": 1 },
    { "name": "IDR", "rate": 14000 }
  ],
  "currency": { "name": "IDR", "symbol": "Rp", "isoCode": "id" },
  "screenHidden": [
    "Onboarding Screen",
    "Initial Setup Screen",
    "Splash Screen",
    "Splash Screen"
  ],
  "dashboardSettings": {
    "showTotalBalanceWidget": true,
    "showTotalExpenseWidget": true,
    "showTotalIncomeWidget": true,
    "showMyBudgetsWidget": true,
    "showMyLogbooksWidget": true,
    "showRecentTransactions": false
  }
}
